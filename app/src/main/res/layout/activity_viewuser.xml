<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewuser">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarofviewuserprofile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:background="#075e54">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">


            <ImageButton
                android:id="@+id/backbtnofuserviewprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@android:color/white">

            </ImageButton>

            <TextView
                android:id="@+id/myapptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/backbtnofuserviewprofile"
                android:text="User profile"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewuserimageseenbyothers"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/viewusernameseenbythers"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="130dp">

        <ImageView
            android:id="@+id/viewuserimageinimageviewseenbyothers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/logoofuserviewprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/viewusernameseenbythers"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-60dp"
        android:src="@drawable/ic_baseline_person_24"
        android:tint="#716e6e">

    </ImageView>


    <EditText
        android:id="@+id/viewusernameseenbythers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:clickable="false"
        android:enabled="false"
        android:textColor="@android:color/black"
        android:inputType="textCapWords">

    </EditText>

    <EditText
        android:id="@+id/phonenumberseenbyothers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:enabled="false"
        android:textColor="@android:color/black"
        android:layout_below="@id/viewusernameseenbythers"
        android:inputType="textCapWords">

    </EditText>

    <ImageButton
        android:id="@+id/logoofphoneuserviewprofile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/phonenumberseenbyothers"
        android:layout_below="@id/viewusernameseenbythers"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_phone_24"
        android:tint="#716e6e">

    </ImageButton>




</RelativeLayout>

